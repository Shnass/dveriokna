	section.section.section--features
		.w
			.section-content 
				.ct 
					.row 
						.col-3.col-md-6
							.iconed-entry
								.icon-placeholder 
									+icon("production")
								.h4 Собственное производство
						.col-3.col-md-6
							.iconed-entry
								.icon-placeholder 
									img(src="static/images/content/window.svg")
								.h4 Немецкая фурнитура
						.col-3.col-md-6
							.iconed-entry
								.icon-placeholder 
									b 30
								.h4 Срок службы 30 лет
						.col-3.col-md-6
							.iconed-entry
								.icon-placeholder 
									+icon("swindle")
