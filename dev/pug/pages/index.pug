			.section-content 
				figure.banner.banner--buttoned 
					picture
						source(media="(max-width:767px)" srcset="static/images/content/hero-img-mobile.jpg") 
						source(media="(min-width:768px)" srcset="static/images/content/hero-img.jpg") 
						img(src="static/images/content/hero-img.jpg")
