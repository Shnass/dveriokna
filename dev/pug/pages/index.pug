	section.section.section--types 
		.w
			header.section-header 
				h2 Производим эконом окна и евроокна
			.section-content 
				.tabs
					ul.tabs-header
						each item in[{s:'rouble',t:'Эконом',i:0},{s:'euro',t:'Евро',i:1}]
